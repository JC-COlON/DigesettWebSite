@inject NavigationManager NavigationManager

<PageTitle>Administrador Digesett</PageTitle>
@page "/Buscar"

<div class="main-container">
    <!-- Contenedor de resultados -->
    <div class="results-section">
        <h1 class="results-title">Resultados de Multas</h1>
        <div class="results-container">
            <div class="result-item" @key="1">
                <h4>Multa #12345</h4>
                <p>Cédula: 000-0000000-0</p>
                <p>Estado: Pendiente</p>
            </div>
            <div class="result-item" @key="2">
                <h4>Multa #67890</h4>
                <p>Cédula: 000-0000000-0</p>
                <p>Estado: Pagada</p>
            </div>
            <!-- Aquí se cargarán los resultados dinámicamente -->
        </div>
    </div>

    <!-- Contenedor de filtros -->
    <div class="filters-section">
        <h2 class="filters-title">Buscar</h2>
        <div class="filters-container">
            <div class="filter-group">
                <label for="ticketId">No. Multa</label>
                <input type="number" id="ticketId" class="form-control" placeholder="Ej. 12345">
            </div>
            <div class="filter-group">
                <label for="cedula">Cédula</label>
                <input type="text" id="cedula" class="form-control" placeholder="Ej. 000-0000000-0">
            </div>
            <div class="filter-group">
                <label for="nombre">Nombre</label>
                <input type="text" id="nombre" class="form-control" placeholder="Ej. Juan">
            </div>
            <div class="filter-group">
                <label for="apellido">Apellido</label>
                <input type="text" id="apellido" class="form-control" placeholder="Ej. Pérez">
            </div>
            <div class="filter-group">
                <label for="zona">Zona</label>
                <input type="text" id="zona" class="form-control" placeholder="Ej. Centro">
            </div>
            <div class="filter-group">
                <label for="tipoVehiculoId">Tipo de Vehículo</label>
                <select id="tipoVehiculoId" class="form-control">
                    <option value="">Seleccionar</option>
                    <option value="1">Motocicleta</option>
                    <option value="2">Automovil</option>
                    <option value="1">Camioneta</option>
                    <option value="2">Autobus</option>
                    <option value="1">Otro</option>

                </select>
            </div>
            <div class="filter-group">
                <label for="placaVehiculo">Placa del Vehículo</label>
                <input type="text" id="placaVehiculo" class="form-control" placeholder="Ej. ABC-123">
            </div>
            <div class="filter-group">
                <label for="marca">Marca del Vehículo</label>
                <input type="text" id="marca" class="form-control" placeholder="Ej. Toyota">
            </div>
            <div class="filter-group">
                <label for="modelo">Modelo del Vehículo</label>
                <input type="text" id="modelo" class="form-control" placeholder="Ej. Corolla">
            </div>
            <div class="filter-group">
                <label for="articuloInfringidoId">Artículo Infringido</label>
                <input type="number" id="articuloInfringidoId" class="form-control" placeholder="Ej. 45">
            </div>
            <div class="filter-group">
                <label for="lugarHecho">Lugar del Hecho</label>
                <input type="text" id="lugarHecho" class="form-control" placeholder="Ej. Av. Principal">
            </div>
            <div class="filter-group">
                <label for="noAgente">No. de Agente</label>
                <input type="text" id="noAgente" class="form-control" placeholder="Ej. AG12345">
            </div>
            <div class="filter-group">
                <label for="estado">Estado</label>
                <select id="estado" class="form-control">
                    <option value="">Seleccionar</option>
                    <option value="Pendiente">Pendiente</option>
                    <option value="Pagada">Pagada</option>
                </select>
            </div>
            <div class="filter-group">
                <label for="fechaInicio">Fecha Inicio</label>
                <input type="date" id="fechaInicio" class="form-control">
            </div>
            <div class="filter-group">
                <label for="fechaFin">Fecha Fin</label>
                <input type="date" id="fechaFin" class="form-control">
            </div>
            <div class="filter-actions">
                <button class="apply-filters" @onclick="BuscarMultas">Buscar</button>
            </div>
        </div>
    </div>
</div>

@code {
    private void BuscarMultas()
    {
        // Lógica para filtrar multas según los parámetros.
        Console.WriteLine("Aplicando filtros...");
    }
}
