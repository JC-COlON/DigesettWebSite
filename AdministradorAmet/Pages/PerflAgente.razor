@inject NavigationManager NavigationManager
@inject HttpClient Http
<PageTitle>Perfil del Agente</PageTitle>
@page "/perfilAgente"

<!-- Fuentes -->
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@500&display=swap" rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=Roboto:wght@500&display=swap" rel="stylesheet">

<h1 class="title">Perfil del Agente</h1>

<div class="main-container">
    <!-- Columna izquierda (70%) -->
    <div class="left-column">
        <div class="container large-container">
            <div class="icons">
                
                <img src="imagenes/edit-icon.svg" alt="Editar" class="icon" title="Editar">
                <img src="imagenes/exportar.png" alt="Notas" class="icon" title="Exportar">
                <img src="imagenes/delete-icon.svg" alt="Eliminar" class="icon" title="Eliminar">
            </div>
            <div class="agent-info">
                <div class="photo-section">
                    <img src="imagenes/usuario.png" alt="Foto de Perfil" class="profile-photo" />
                    <h2>Alex Colon</h2>
                    <p class="id">No. Agente: A001</p>
                </div>

                <div class="details-section">
                    <div class="column">
                        <p><strong>Cédula:</strong> 40234047228</p>
                        <p><strong>Email:</strong> AlexColon@gmail.com</p>
                        <p><strong>Teléfono:</strong> 8098378318</p>
                        <p><strong>Nacionalidad:</strong> Dominicana</p>
                        <p><strong>Género:</strong> Masculino</p>
                    </div>
                    <div class="column">
                        <p><strong>Tipo de Sangre:</strong> B+</p>
                        <p><strong>Ubicación de Trabajo:</strong> Monseñor Nouel</p>
                        <p><strong>Estado Civil:</strong> Soltero</p>
                        <p><strong>Fecha de Nacimiento:</strong> 2006-02-13</p>
                        <p><strong>Altura:</strong> 1.78 m</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="container">
            <h3>Últimas Reseñas</h3>
            <div class="review">
                <p><strong>Comentario 1:</strong> Excelente trabajo y muy profesional.</p>
            </div>
            <div class="review">
                <p><strong>Comentario 2:</strong> Muy atento y servicial.</p>
            </div>
            <div class="review">
                <p><strong>Comentario 3:</strong> Puntual y preciso en sus funciones.</p>
            </div>
        </div>
    </div>

    <!-- Columna derecha (30%) -->
    <div class="right-column">
        <div class="container">
            <h3>Multas Puestas</h3>
            <div class="progress-bar">
                <div class="progress" style="width: 80%;"></div>
            </div>
            <span>80%</span>
        </div>

        <div class="container">
            <h3>Promedio de Calificaciones</h3>
            <div class="rating-bar">
                <div class="progress" style="width: 85%;"></div>
            </div>
            <span>4.25 / 5</span>
        </div>

        <div class="container">
            <h3>Multas por Artículo</h3>
            <img src="imagenes/grafico.png" alt="Gráfico de Multas" class="chart" />
        </div>
    </div>
</div>

@code {
    private void Atras()
    {
        NavigationManager.NavigateTo("");
    }
}
