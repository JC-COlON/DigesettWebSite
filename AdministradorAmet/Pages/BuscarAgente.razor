    <!-- Contenedor de filtros a la derecha -->
    <div class="filters-section">
        <h2 class="filters-title">Filtros</h2>
        <div class="filters-container">
            <div class="filter-group">
                <label for="cedula">Cédula</label>
                <input type="text" id="cedula" class="form-control" placeholder="Ej. 402-3404722-9">
            </div>
            <div class="filter-group">
                <label for="nombre">Nombre</label>
                <input type="text" id="nombre" class="form-control" placeholder="Ej. Juan">
            </div>
            <div class="filter-group">
                <label for="apellido">Apellido</label>
                <input type="text" id="apellido" class="form-control" placeholder="Ej. Pérez">
            </div>
            <div class="filter-group">
                <label for="genero">Género</label>
                <select id="genero" class="form-control">
                    <option value="">Seleccionar</option>
                    <option value="Masculino">Masculino</option>
                    <option value="Femenino">Femenino</option>
                    <option value="Otro">Otro</option>
                </select>
            </div>
            <div class="filter-group">
                <label for="tipoSangre">Tipo de Sangre</label>
                <select id="estadoCivil" class="form-control">
                    <option value="">Seleccionar</option>
                    <option value="A+">A+</option>
                    <option value="A-">A-</option>
                    <option value="B+">B+</option>
                    <option value="B-">B-</option>
                    <option value="O+">O+</option>
                    <option value="O-">O-</option>
                    <option value="AB+">AB+</option>
                    <option value="AB-">AB-</option>
                </select>
            </div>
            <div class="filter-group">
                <label for="estadoCivil">Estado Civil</label>
                <select id="estadoCivil" class="form-control">
                    <option value="">Seleccionar</option>
                    <option value="Soltero">Soltero</option>
                    <option value="Casado">Casado</option>
                    <option value="Divorciado">Divorciado</option>
                    <option value="Viudo">Viudo</option>
                </select>
            </div>
            <div class="filter-group">
                <label for="noAgente">No. de Agente</label>
                <input type="text" id="noAgente" class="form-control" placeholder="Ej. AG12345">
            </div>
            <div class="filter-group">
                <label for="provincia">Provincia</label>
                <select id="provincia" class="form-control">
                    <option value="">Seleccionar</option>
                    <option value="Azua">Azua</option>
                    <option value="Bahoruco">Bahoruco</option>
                    <option value="Barahona">Barahona</option>
