                    <option value="Santo Domingo">Santo Domingo</option>
                    <option value="Valverde">Valverde</option>
                </select>
            </div>

            <div class="filter-actions">
                <button class="apply-filters" @onclick="BuscarAgentes">Aplicar Filtros</button>
            </div>
        </div>
    </div>
</div>

